<div class="d-flex justify-content-between flex-wrap flex-md nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Editar <%= equipas.nome %></h1>
    <div class="btn-toolbar mb-2 mb-md 0">
        <div class="btn-group me-2">
            <button class="btn btn-sm btn-outline-secondary">
                ?
            </button>
        </div>
    </div>
</div>

<div class="col py-3">

    <div class="row">
        <div class="col">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">Lista</a></li>
                    <li class="breadcrumb-item active"><%= equipas.nome %></li>
                </ol>
            </nav>
        </div>
        <div class="col text-end fw-lighter">
            <b>EquipamentoId: <%= equipas._id %></b>
        </div>
    </div>

</div>


<form action="/edit/<%= equipas._id %>?_method=PUT" method="POST">

    <div class="row form grou mb-4">

        <div class="col">
            <label for="nome">Nome</label>
            <input type="text" class="form-control" id="nome" name="nome" value="<%= equipas.nome %>" placeholder="Nome equipamento..." required >
        </div>

        <div class="col">
            <label for="num_serie">Número de série</label>
            <input type="text" class="form-control" id="num_serie" name="num_serie" value="<%= equipas.num_serie %>" placeholder="Número de série..." required >
        </div>

    </div>

    <div class="form-group mb-4">
        <label for="descricao">Descrição</label>
        <textarea class="form-control" name="descricao" id="descricao" cols="30" rows="12" placeholder="Descrição do equipamento..." required><%= equipas.descricao %></textarea>
    </div>

    <div class="form-group mb-4 d-flex justify-content-between">
        <input type="file" name="filename" id="image">
        <button type="submit" class="btn btn-primary">Update Equipamento</button>

        <button type="button" class="btn btn-danger" data-bs-toggle="modal" id="deleteButton" data-bs-target="#deleteModal">Delete Equipamento</button>
    </div>
</form>

<div class="modal fade" tabindex="-1" role="dialog" id="deleteModal">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <div class="modal-title">Você irá remover este equipamento.</div>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <p>
           Quer mesmo deletar este equipamento <b class="fw-bold"><%= equipas.nome %></b><br/>
            você tem certeza?
          </p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fechar</button>
          <form action="/edit/<%= equipas._id %>?_method=DELETE" method="POST" class="position-relative">
            <button type="submit" class="btn btn-primary">Sim, quero remover</button>
          </form>
        </div>
      </div>
    </div>
  </div>